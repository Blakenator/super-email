{
  "name": "@main/backend",
  "version": "1.0.0",
  "description": "Email client backend with IMAP/POP sync and SMTP sending",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "pnpm run db:start && tsx --watch bootstrap.ts & pnpm run start:stripe",
    "start:stripe": "(command -v stripe >/dev/null 2>&1 && stripe listen --forward-to localhost:4000/api/webhooks/stripe && echo 'Stripe CLI forwarding webhooks...' || echo 'Stripe CLI not installed - webhooks will not be forwarded locally')",
    "dev": "tsx --watch bootstrap.ts",
    "typecheck": "tsc --noEmit",
    "db:setup": "docker-compose -f ../docker-compose.yml up -d",
    "db:start": "docker-compose -f ../docker-compose.yml up -d",
    "db:stop": "docker-compose -f ../docker-compose.yml down",
    "stop": "docker-compose -f ../docker-compose.yml down",
    "test": "c8 mocha 'test/**/*.test.ts'",
    "test:unit": "c8 --config .c8rc.unit.json mocha --no-config --node-option=import=tsx --timeout=30000 --exit 'test/**/*.unit.test.ts'",
    "test:integration": "c8 --config .c8rc.integration.json mocha --no-config --node-option=import=tsx --timeout=30000 --exit --require test/integration/hooks.ts 'test/**/*.integration.test.ts'",
    "test:watch": "mocha --watch 'test/**/*.test.ts'",
    "test:watch:unit": "mocha --no-config --node-option=import=tsx --watch 'test/**/*.unit.test.ts'",
    "test:watch:integration": "mocha --no-config --node-option=import=tsx --require test/integration/hooks.ts --watch 'test/**/*.integration.test.ts'",
    "test:coverage": "c8 --reporter=html --reporter=text mocha 'test/**/*.test.ts'",
    "test:ci": "c8 --reporter=lcov --reporter=text mocha 'test/**/*.test.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.2",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/client-secrets-manager": "^3.705.0",
    "@aws-sdk/s3-request-presigner": "^3.705.0",
    "@graphql-tools/schema": "^10.0.8",
    "@main/common": "workspace:^",
    "@supabase/supabase-js": "^2.90.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "imapflow": "^1.2.5",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mailparser": "^3.9.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "stripe": "^20.2.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.20",
    "@types/mailparser": "^3.4.6",
    "@types/mocha": "^10.0.7",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^6.4.16",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/ws": "^8.5.12",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "sinon": "^18.0.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3"
  }
}
