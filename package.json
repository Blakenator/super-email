{
  "name": "@main/email-client",
  "version": "1.0.0",
  "description": "A self-hosted email client with IMAP/POP and SMTP support",
  "main": "index.js",
  "scripts": {
    "start": "pnpm run --parallel -r --filter=!@main/mobile start",
    "stop": "pnpm run --parallel -r stop",
    "typecheck": "pnpm run --parallel --filter=!@main/infra -r typecheck",
    "build": "pnpm run --filter @main/backend build && pnpm run --filter @main/frontend build",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:tunnel": "./scripts/db-tunnel.sh",
    "db:tunnel:dev": "./scripts/db-tunnel.sh dev",
    "db:tunnel:prod": "./scripts/db-tunnel.sh prod",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:prod": "./scripts/deploy.sh prod",
    "infra:preview": "cd infra && pulumi preview",
    "infra:up": "cd infra && pulumi up",
    "infra:destroy": "cd infra && pulumi destroy",
    "mobile:start": "pnpm run --filter @main/mobile start",
    "mobile:start:clear": "pnpm run --filter @main/mobile start:clear",
    "mobile:ios": "pnpm run --filter @main/mobile ios",
    "mobile:ios:clear": "pnpm run --filter @main/mobile ios:clear",
    "mobile:android": "pnpm run --filter @main/mobile android",
    "mobile:android:clear": "pnpm run --filter @main/mobile android:clear",
    "mobile:logs": "pnpm run --filter @main/mobile logs",
    "mobile:reset": "pnpm run --filter @main/mobile reset",
    "mobile:build": "./scripts/build-mobile.sh",
    "mobile:build:ios": "./scripts/build-mobile.sh ios",
    "mobile:build:android": "./scripts/build-mobile.sh android"
  },
  "keywords": [
    "email",
    "imap",
    "smtp",
    "client"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "@babel/plugin-bugfix-firefox-class-in-computed-class-key": "^7.28.5",
    "@types/luxon": "^3.7.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "luxon": "^3.7.2"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.0"
    }
  }
}
