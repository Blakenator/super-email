{
  "name": "@main/email-client",
  "version": "1.0.0",
  "description": "A self-hosted email client with IMAP/POP and SMTP support",
  "main": "index.js",
  "scripts": {
    "start": "pnpm run --parallel -r start",
    "stop": "pnpm run --parallel -r stop",
    "typecheck": "pnpm run --parallel --filter=!@main/infra -r typecheck",
    "build": "pnpm run --filter @main/backend build && pnpm run --filter @main/frontend build",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:prod": "./scripts/deploy.sh prod",
    "infra:preview": "cd infra && pulumi preview",
    "infra:up": "cd infra && pulumi up",
    "infra:destroy": "cd infra && pulumi destroy"
  },
  "keywords": [
    "email",
    "imap",
    "smtp",
    "client"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "luxon": "^3.7.2"
  }
}
